<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
	<persistence-unit name="joaquin" transaction-type="RESOURCE_LOCAL">
	
	<class>logica.Instituto</class>
	<class>logica.Curso</class>
	<class>logica.Edicion</class>
	<class>logica.ProgFormacion</class>
	<class>logica.Usuario</class>
	<class>logica.Estudiante</class>
	<class>logica.Docente</class>	
	<class>logica.InscripcionPF</class>
	<class>logica.InscripcionEd</class>
	<class>logica.Categoria</class>	
	
	<properties>
			<property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect" />
			<property name="hibernate.hbm2ddl.auto" value="create" />
			<property name="hibernate.connection.username" value="postgres"/>
			<property name="hibernate.connection.password" value="lapass"/>
			<property name="javax.persistence.jdbc.url" value="jdbc:postgresql://localhost:5432/edext"/>
			<property name="javax.persistence.jdbc.driver" value="org.postgresql.Driver"/>
	</properties>
	
	</persistence-unit>
</persistence>
